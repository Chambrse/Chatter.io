<div class="container opaque">
    <div class="row" id="heading">
        <div class="col">
            <h1>Chatter. </h1>
            <h3>Join the conversation.</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-12" id="loginWindow">
            Welcome to Chatter, please log in.
        </div>
        <div class="col-md-6 col-sm-12" id="loginWindow">
            {{#if login_errors}}
                {{login_errors}}
            {{/if}}
            <form action="/login" method="POST" id="registerform">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="email" placeholder="Email">

                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" aria-describedby="password" placeholder="Password">
                    <br>
                    <p style="color: red">Incorrect password.</p>
                </div>
                <p>Don't have an account? <a href="/register">Register</a></p>
                <input type="submit" class="btn btn-secondary">
            </form>
        </div>
    </div>

</div>

